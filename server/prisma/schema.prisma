generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Usuarios {
  id                     Int     @id @unique @default(autoincrement())
  nombre                 String
  apellido               String
  email                  String  @unique
  password               String
  edad                   Int
  Hobbie                 String? @default("Ninguno")
  Trabajo                String? @default("Ninguno")
  Localidad              String
  Direccion              String?
  Pais                   String
  Preferencias_laborales String? @default("Ninguna")
  Genero                 String
  Experiencia_Laboral    Int?    @default(0)
  Preferencia_distancia  Int?    @default(999)
  Que_necesitaria        String?
  user_that_liked        Int[]
  Empresa                Boolean
}

model Empleador {
  id                       Int     @id @unique @default(autoincrement())
  edad                     Int
  email                    String  @unique
  password                 String
  Que_necesitaria          String
  Localidad                String
  Direccion                String?
  Pais                     String
  Preferencias_Experiencia Int?    @default(0)
  Genero                   String
  Preferencia_distancia    Int?    @default(0)
}
